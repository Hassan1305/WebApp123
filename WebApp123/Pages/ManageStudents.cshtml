@page
@model WebApp123.Pages.ManageStudentsModel
@{
}

<h1> Students Details:</h1>


<table class="table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var std in Model.AllStudents){
        <tr >
            <td>
                @std.ID
            </td >
            <td>
                @std.Name
            </td>
            <td>
                @std.Age
            </td>
        </tr>
        }
    </tbody>
</table>


<form asp-page-handler="AddStudent">
    <label for="Name">Name:</label>
    <input asp-for=NewStudent.Name name = "Name"/>
    <label for="Age">Age:</label>
    <input asp-for=NewStudent.Age name= "Age"/>
    <button type="submit">Add Student</button>

</form>